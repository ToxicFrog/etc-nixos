{ config, lib, pkgs, ... }:

{
  imports = [
    <nixpkgs/nixos/modules/installer/scan/not-detected.nix>
    ./secrets/homedirs.nix
  ];

  services.zfs.autoScrub = {
    enable = true;
    interval = "*-*-01 01:15:00";
  };

  fileSystems."/" =
    { device = "ancilla/root";
      fsType = "zfs";
    };
  fileSystems."/nix" =
    { device = "internal/nix";
      fsType = "zfs";
    };
  fileSystems."/home" =
    { device = "ancilla/home";
      fsType = "zfs";
    };
  fileSystems."/boot" =
    { device = "internal/boot";
      fsType = "zfs";
    };

  fileSystems."/boot" = {
    device = "/dev/disk/by-label/BOOT";
    fsType = "vfat";
  };

  swapDevices = [
    { device = "/dev/disk/by-label/m2-swap"; }
  ];

  nix.maxJobs = lib.mkDefault 4;
}
